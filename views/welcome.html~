<script>
$(document).ready(function(){
  $("#subir_fab").click(function(){
    $.ajax({url:"/subir_fab",success:function(result){
      $(".edif_fab").html(result);
    }});
  });
  $("#subir_kwik").click(function(){
    $.ajax({url:"/subir_kwik",success:function(result){
      $(".edif_kwik").html(result);
    }});
  });
  $("#subir_planta").click(function(){
    $.ajax({url:"/subir_planta",success:function(result){
      $(".edif_planta").html(result);
    }});
  });

  $("#comprar_homero").click(function(){
    $.ajax({url:"/comprar_homero",success:function(result){
      $(".uni_homero").html(result);
    }});
  });

  $("#comprar_lisa").click(function(){
    $.ajax({url:"/comprar_lisa",success:function(result){
      $(".uni_lisa").html(result);
    }});
  });
  $("#comprar_bart").click(function(){
    $.ajax({url:"/comprar_bart",success:function(result){
      $(".uni_bart").html(result);
    }});
  });
  $("#comprar_bob").click(function(){
    $.ajax({url:"/comprar_bob",success:function(result){
      $(".uni_bob").html(result);
    }});
  });
});
</script>